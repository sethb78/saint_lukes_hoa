<div class="span6"></div>
<div class="span6">
  <% if user_signed_in? %>
  	<div id="logged-in-user">
  		Signed in as <%= current_user.name.titleize %>.&nbsp;&nbsp;Not you?
  		<%= link_to "Sign Out", destroy_user_session_path %>
  	</div>
  <% else %>
  	<span id="login">
      <%= link_to("Sign Up / Sign In", new_user_session_path, id: "topline-link") %>
      <%= form_for("user", :url => user_session_path, :id => "hidden") do |f| %>
      	<div><%= f.label :email %><br />
    	   <%= f.email_field :email, :autofocus => true %>
        </div>
    	  <div><%= f.label :password %><br />
    	   <%= f.password_field :password %>
        </div>
    	  <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "label_remember_me" %></div>
      	<div><%= f.submit 'Sign in', class: "btn" %></div>
        <div><%= link_to "Forgot your password?", new_password_path('user') %></div>
      	<div><%= link_to "New User?", new_user_registration_path %></div>
  		<% end %>
   </span>
  <% end %>
</div>