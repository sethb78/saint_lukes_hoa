<% if @update &&  user_signed_in? %>
<div class="row-fluid">
  <div class="span12 updates-homepage">
<h3> An Update From The Board...</h3>
<h4><%= @update.title %></h4>
<p>



 <%= simple_format(@update.content.truncate(200, :omission => "...(#{link_to('Read More', @update, class: 'update_link')})")) %>
</p>
 
</div>
</div>
<% end %>


<div class="hero-unit">

    <h1 class="center">Welcome</h1>
