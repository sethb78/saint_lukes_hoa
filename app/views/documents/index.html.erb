<%= provide(:title, 'Documents') %>
<div class="document-index">
	<div class="row-fluid">
		<div class="span6">
		  <div class="span12">
		    <h3>Governing Documents</h3>
		    <% @documents_rules.each do |document| %>
					<p><%= link_to document.title, document.document_url.to_s %> <%= link_to image_tag('pdf.png'), document.document_url.to_s  %></p>		
				<% end %>
			</div>
			<div class="span12">
				<h3>Other Documents</h3>
				<% @documents_other.each do |document| %>
					<p><%= link_to document.title, document.document_url.to_s %> <%= link_to image_tag('pdf.png'), document.document_url.to_s  %></p>		
				<% end %>
			</div>
		</div>
		<div class="span6">
			<div class="span12 minutes">
				<h3>Meeting Minutes</h3>
				<% @documents_meeting.each do |document| %>
					<p><%= link_to document.title, document.document_url.to_s %> <%= link_to image_tag('pdf.png'), document.document_url.to_s  %></p>		
				<% end %>
			</div>
			<% if @documents_memorandums.any? %>
				<div class="span12">
					<h3>Memorandums</h3>
					<% @documents_memorandums.each do |document| %>
					<p><%= link_to document.title, document.document_url.to_s %> <%= link_to image_tag('pdf.png'), document.document_url.to_s  %></p>		
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>

